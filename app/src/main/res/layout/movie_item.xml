<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_margin_8dp">

    <ImageView
        android:id="@+id/iv_backdrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_thumbnail_height"
        android:scaleType="centerCrop"
        android:src="@drawable/thumbnail_test" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_backdrop"
        android:layout_marginBottom="@dimen/padding_margin_16dp"
        android:layout_marginLeft="@dimen/padding_margin_8dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:padding="@dimen/padding_margin_8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:textStyle="bold"
        tools:text="@string/movie_item_rating_filler" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan_500"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_margin_4dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12sp"
        android:textStyle="bold"
        tools:text="@string/movie_item_title_filler" />

</RelativeLayout>